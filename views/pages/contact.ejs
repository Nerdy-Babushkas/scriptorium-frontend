                <div class="order-1 lg:order-2 flex justify-center">
                    <div class="relative">
                        <div class="absolute inset-0 bg-[#06D6A0] rounded-full blur-[80px] opacity-20 animate-pulse"></div>
                        
                        <img src="/assets/doll.png" 
                             alt="Cute 3D Matryoshka Doll" 
                             class="w-full max-w-[400px] lg:max-w-[600px] h-auto drop-shadow-2xl animate-space-float object-contain">
                    </div>
                </div>

            </div>
        </div>
    </main>

    <style>
        @keyframes space-float {
            0% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(-10px, -15px) rotate(-3deg); }
            50% { transform: translate(0, -25px) rotate(0deg); }
            75% { transform: translate(10px, -15px) rotate(3deg); }
            100% { transform: translate(0, 0) rotate(0deg); }
        }
        .animate-space-float {
            animation: space-float 8s ease-in-out infinite;
        }
    </style>
